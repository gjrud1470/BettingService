<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/table_background"
    tools:context=".BettingActivity">

    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/room_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="제목"
            android:textColor="#FFFFFF"
            android:textSize="32sp"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_setting_white" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userList"
        android:layout_below="@id/titleBar"
        android:layout_above="@id/threeTexts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/threeTexts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/threeButtons"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/text_background"
                app:cardCornerRadius="10dp"
                app:cardElevation="1sp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="POOL"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/text_background"
                app:cardCornerRadius="10dp"
                app:cardElevation="1sp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/pool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="  0"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/text_background"
                app:cardCornerRadius="10dp"
                app:cardElevation="1sp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TO CALL"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/text_background"
                app:cardCornerRadius="10dp"
                app:cardElevation="1sp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/toCall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  0"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/text_background"
                app:cardCornerRadius="10dp"
                app:cardElevation="1sp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="BUDGET"
                    android:textSize="30dp"
                    android:textColor="#FFFFFF"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/text_background"
                app:cardCornerRadius="10dp"
                app:cardElevation="1sp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/budget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  0"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/threeButtons"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="CALL"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="@color/button"
            android:textColor="#FFFFFF"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/raise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="RAISE"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="@color/button"
            android:textColor="#FFFFFF"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/fold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="FOLD"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="@color/button"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</RelativeLayout>